pipeline{
    agent any
    options {
        // This is required if you want to clean before build
        skipDefaultCheckout(true)
    }
    stages{
        stage('Cloning'){
            steps{
                sh "git clone https://github.com/eran8888/JenkinsGitandmore.git"
            }
        }
        stage('building') {
            steps{
                // Clean before build
                cleanWs()
                sh "cd K8S/Homework/K8S/docker-app"
                sh "docker build -t npm:0.0.1"
                sh "docker run -p8082:3000"
            }
        }
            
    }
}