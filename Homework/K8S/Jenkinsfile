pipeline{
    agent any
    options {
        // This is required if you want to clean before build
        skipDefaultCheckout(true)
    }
    stages{
        stage('Cleaning'){
            steps{
                // Clean before build
                cleanWs()
            }
        }
        stage('Cloning'){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/eran8888/JenkinsGitandmore.git']]])
            }
        }
        stage('building') {
            steps{
                sh "cd K8S/Homework/K8S/docker-app"
                sh "docker build -t npm:0.0.1"
                sh "docker run -p8082:3000"
            }
        }
            
    }
}